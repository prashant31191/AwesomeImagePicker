<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--tools:context="in.myinnos.imagepicker.GravMainActivity"-->
<RelativeLayout
    android:id="@+id/rlHeader"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_alignParentTop="true"
    android:padding="5dp"
    android:layout_height="60dp">

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivRotate"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:tint="#fff"
        android:scaleType="centerInside"
        android:src="@drawable/ic_rotate"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/ivCrop"
        android:layout_toLeftOf="@+id/ivRotate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:tint="#fff"
        android:scaleType="centerInside"
        android:src="@drawable/ic_crop"/>

    <ImageView
        android:id="@+id/ivAddImage"
        android:layout_toLeftOf="@+id/ivDetele"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:tint="#fff"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add_image"/>


    <ImageView
        android:id="@+id/ivDetele"
        android:layout_toLeftOf="@+id/ivCrop"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:tint="#fff"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete"/>


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:tint="#fff"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_left"/>




</RelativeLayout>
    <ImageView
        android:id="@+id/imageView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rlHeader"
        android:layout_above="@+id/rvImageList"
        android:src="@drawable/image_selector"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"

        />

    <android.support.v4.view.ViewPager
        android:id="@+id/imagePager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rlHeader"
        android:layout_above="@+id/rvImageList"
        android:layout_marginBottom="10dp"
        >
    </android.support.v4.view.ViewPager>


    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rlHeader"
        android:layout_above="@+id/rvImageList"
        android:layout_marginBottom="10dp"

        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="#8fff" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvImageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#e1e1e1"
        android:minHeight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
